<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="@color/bitch_white"
                android:centerColor="@color/darker_white"
                android:endColor="@color/bitch_white"
                android:angle="0"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="2dip"
                android:color="@color/black" />
            <corners android:radius= "8dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="@color/limoncello"
                android:endColor="@color/ops"
                android:angle="0"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="2dip"
                android:color="@color/bitch_white" />
            <corners android:radius= "8dp" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/day_blue" android:endColor="@color/sea_blue" android:startColor="@color/sea_blue" />
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
            <stroke android:width="2dip" android:color="@color/black" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="@color/zz_blue"
                android:endColor="@color/zz_greeen"
                android:angle="0"/>
            <padding android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <stroke
                android:width="2dip"
                android:color="@color/black" />
            <corners android:radius= "8dp" />
        </shape>
    </item>
</selector>