<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialComponents.Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyle">@style/button</item>
    </style>
    <style name="Theme.ZaneProjectApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- FullScreen Themes *DO NOT REMOVE* app will not launch -->

    <style name="Theme.ZaneProjectApp.Fullscreen" parent="Theme.MaterialComponents.Light">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.ZaneProjectApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ZaneProjectApp.FullscreenContainer" parent="Theme.MaterialComponents.Light">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>